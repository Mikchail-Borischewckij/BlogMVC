@model  Blogs.WebUI.Models.UserRegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/_Layout.cshtml";
}

<center>
    <h2>Sign up</h2>

    @{Html.EnableClientValidation();}
    @{Html.EnableUnobtrusiveJavaScript();}

    @using (Html.BeginForm("RegisterUsers", "Users", new {ViewBag.ReturnUrl},
        FormMethod.Post))
    {
        <div class="text-error">
            <b>@Html.ValidationSummary(true, "Failed to create an account. Please correct errors and try again.")</b>
        </div>
        <div class="control-group">
            <h6>@Html.LabelFor(m => m.Login, new {@class = "control-label"}) </h6>
            <div class="controls">
                @Html.TextBoxFor(m => m.Login, new {@placeholder = "Login"})
                <div class="text-error">
                    <b>@Html.ValidationMessageFor(m => m.Login)</b>
                </div>
            </div>
        </div>

        <div class="control-group">
            <b>@Html.LabelFor(m => m.Email, new {@class = "control-label"})</b>
            <div class="controls">
                @Html.TextBoxFor(m => m.Email, new {@placeholder = "Email address"})
                <div class="text-error">
                    <b>@Html.ValidationMessageFor(m => m.Email)</b>
                </div>
            </div>
        </div>

        <div class="control-group">
            <b>@Html.LabelFor(m => m.Password, new {@class = "control-label"})</b>
            <div class="controls">
                @Html.PasswordFor(m => m.Password, new {@placeholder = "Password"})
                <div class="text-error">
                    <b>@Html.ValidationMessageFor(m => m.Password)</b>
                </div>
            </div>
        </div>

        <div class="control-group">
            <b>@Html.LabelFor(m => m.ConfirmPassword, new {@class = "control-label"})</b>
            <div class="controls">
                @Html.PasswordFor(m => m.ConfirmPassword, new {@placeholder = "Confirm Password"})
                <div class="text-error">
                    <b>@Html.ValidationMessageFor(m => m.ConfirmPassword)</b>
                </div>
            </div>
        </div>

        <div>
            <input type="submit" class="btn btn-primary" value="Submit"/>
        </div>
    }
</center>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
