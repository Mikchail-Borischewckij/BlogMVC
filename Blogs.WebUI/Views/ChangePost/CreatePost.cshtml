@model Blogs.WebUI.Models.CreatePostModel
@{
    ViewBag.Title = "AddPost";
}

<script src="@Url.Content("~/Scripts/jquery-1.11.1.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"
        type="text/javascript"></script>

<h2>Add a new post</h2>

@{Html.EnableClientValidation();}
@{Html.EnableUnobtrusiveJavaScript();}



@using (Html.BeginForm("CreatePost", "ChangePost", new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new {enctype="multipart/form-data", @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
       
    <div class="control-group">
          @Html.LabelFor(m => m.Title, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.Title, new { @class = "input-large" })
                @Html.ValidationMessageFor(m => m.Title)              
            </div>
        </div>
    
     <div class="control-group">
     @Html.LabelFor(m => m.Preview, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.Preview, new { @class = "input-large" })
            @Html.ValidationMessageFor(m => m.Preview)
            
            </div>
        </div>

    
        <div class="control-group">
          @Html.LabelFor(m => m.Content, new { @class = "control-label" })
            <div class="controls">
                @Html.TextAreaFor(m => m.Content, new { @class = "input-large" })
                @Html.ValidationMessageFor(m => m.Content)            
            </div>
        </div>
    
        <div class="control-group">
          @Html.LabelFor(m => m.tags, new { @class = "control-label" })
            <div class="controls">
                @Html.TextAreaFor(m => m.tags, new { @class = "input-large" })
                @Html.ValidationMessageFor(m => m.tags)         
            </div>
        </div>     
    
       <p>
            <input type="submit" class="btn btn-primary"   value="Create" />
        </p>
}