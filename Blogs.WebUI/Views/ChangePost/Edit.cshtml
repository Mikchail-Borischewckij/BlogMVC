@model Blogs.Domain.Entities.Post
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="mytitle">
    <h2>Edit : @Model.Title</h2>
</div>
<div class="editorPost">
    @using (Html.BeginForm("Edit", "ChangePost",FormMethod.Post))
    {
        <b>@Html.EditorForModel()</b>
        <button type="submit" class="btn btn-primary"> Save</button>
    }
</div>